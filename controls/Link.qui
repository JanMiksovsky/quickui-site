<!-- Wraps an anchor tag -->

<Control name="Link" tag="a">

<style>
{
    cursor: pointer;
}
</style>

<script>
Link.prototype.extend({
    
    href: Control.chain( "prop/href" ),
    target: Control.chain( "prop/target" ),
    
    initialize: function() {
        if ( this.href() === "" )
        {
            // Use a placeholder href so the browser will use a hand cursor.
            this.href( "javascript:" );
        }
    }
});
</script>

</Control>
