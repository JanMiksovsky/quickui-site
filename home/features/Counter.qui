</content>

<style>
{
    user-select: none;
    -khtml-user-select:none;
    -moz-user-select: none;
}
</style>

<script>
Counter.prototype.extend({
    initialize: function() {
        // Points to above span.
        var $count = this.$count();
        this.click(function() {
            $count.text(1 +
             parseInt($count.text()));
        });
    }
});
</script>

