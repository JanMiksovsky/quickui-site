<Control className="Greet">

<content>
    Hello, <span ref="Greet_content"/><span ref="Greet_punctuation">.</span>
</content>

<script>
Greet.prototype.extend({
    content: Control.chain( "$Greet_content", "content" ),
    punctuation: Control.chain( "$Greet_punctuation", "content" )
});
</script>

</Control>